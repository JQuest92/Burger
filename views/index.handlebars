<h1>Burgers</h1>

<div class="container">
  <div class="row">

		<h2>Fresh Burgers For Your Pleasure</h2>
    <div class="col-md">
     	<ul>
  			{{#each burgers}}
    		{{#unless devoured}}
      	{{> burgers/burgers-block devoured=true}}
    		{{/unless}}
  			{{/each}}
			</ul>
    </div>

    <div class="col-md"> 
			<h2>A List Of Burgers Sacrificed For The Gastronomical Good</h2>
			<ul>
  			{{#each burgers}}
    		{{#if devoured}}
      	{{> burgers/burgers-block devoured=false}}
    		{{/if}}
  			{{/each}}
			</ul>
    </div>

    <div class="col-md">
      <h2>Add a Burger!</h2>
			<form class="create-form">
  			<div class="form-group">
   				<label for="burger">Burger Name:</label>
    			<input type="text" id="burger" name="name">
  			</div>
  			<button type="submit">Add Burger</button>
			</form>
    </div>

  </div> <!--end row-->
</div><!--end container-->

